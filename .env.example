# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/retro_console_tracker
DB_HOST=localhost
DB_PORT=5432
DB_NAME=retro_console_tracker
DB_USER=your_username
DB_PASSWORD=your_password

# eBay API Credentials (Get from developer.ebay.com)
EBAY_APP_ID=your_ebay_app_id
EBAY_CERT_ID=your_ebay_cert_id
EBAY_DEV_ID=your_ebay_dev_id
EBAY_TOKEN=your_ebay_token

# Reddit API Credentials (Get from reddit.com/prefs/apps)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=retro-console-tracker/0.1

# PriceCharting API (Optional - pricecharting.com/api)
PRICECHARTING_API_KEY=your_pricecharting_key

# Email Notifications (Optional - for price alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Application Settings
ENV=development
DEBUG=true
API_PORT=8000
SCRAPER_INTERVAL_HOURS=6
LOG_LEVEL=INFO

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
